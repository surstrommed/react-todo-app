{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { "project": ["./tsconfig.json"] },
    "plugins": [
        "@typescript-eslint", "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error", { "singleQuote": true }]
    },
    "ignorePatterns": ["src/**/*.test.ts"]
}